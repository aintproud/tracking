{

  "include": ["**/*.mjs"],
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "data": ["data"],
      "src": ["src"],
      "test": ["test"],
      "root": ["."]
    },
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "types",
    "declarationMap": true
  }
}
